            }
          }
        },
        {
          "name": "Update Stock (PATCH)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": -2\n}"
            },
            "url": {
              "raw": "{{base_url_products}}/products/{{product_id}}/stock",
              "host": ["{{base_url_products}}"],
              "path": ["products", "{{product_id}}", "stock"]
