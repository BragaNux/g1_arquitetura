generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id          Int           @id @default(autoincrement())
  orderId     String
  amount      Float
  method      String
  status      PaymentStatus  @default(PENDING)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum PaymentStatus {
  PENDING
  APPROVED
  DECLINED
  CANCELLED
}
