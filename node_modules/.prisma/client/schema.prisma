generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int     @id @default(autoincrement()) @map("id")
  name  String  @map("name")
  price Decimal @map("price") @db.Decimal(12, 2)
  stock Int     @default(0) @map("stock")

  orderProducts OrderProduct[]

  @@map("products")
}

model Order {
  id         Int      @id @default(autoincrement()) @map("id")
  date       DateTime @default(now()) @map("date")
  totalValue Decimal  @map("total_value") @db.Decimal(12, 2)

  items OrderProduct[]

  @@map("orders")
}

model OrderProduct {
  id         Int     @id @default(autoincrement()) @map("id")
  productId  Int     @map("id_product")
  orderId    Int     @map("id_order")
  quantity   Int     @map("quant")
  unitValue  Decimal @map("unit_value") @db.Decimal(12, 2)
  totalValue Decimal @map("total_value") @db.Decimal(12, 2)

  product Product @relation(fields: [productId], references: [id])
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([productId])
  @@map("order_products")
}
